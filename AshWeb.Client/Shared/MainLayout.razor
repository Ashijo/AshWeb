@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton 
            Icon="@Icons.Material.Filled.Menu" 
            Color="Color.Inherit" 
            Edge="Edge.Start" 
            OnClick="@(e => DrawerToggle())"/>
        <MudSpacer/>
        <div>
            <MudThemeProvider 
                @ref="@_mudThemeProvider" 
                @bind-IsDarkMode="@_isDarkMode"/>
            <MudSwitch 
                @bind-Checked="@_isDarkMode" 
                Color="Color.Primary" 
                ThumbIcon=@ThemeIcon 
                ThumbIconColor="@(_isDarkMode == true ? Color.Warning : Color.Warning)"
                Size="Size.Large"
                Class="ma-4" 
                T="bool" />
        </div>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Ashijo" Target="_blank"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">AshWeb</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
    <Footer/>
</MudLayout>